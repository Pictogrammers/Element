{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2023", "ES6", "DOM"],
    "declaration": true,
    "strictNullChecks": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["src"],
    "strictPropertyInitialization": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}